<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="logTypeEntry"
            type="com.juhezi.coderslife.entry.LogTypeEntry" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_log_type_icon"
            android:layout_width="@dimen/img_item_log_type_icon_size"
            android:layout_height="@dimen/img_item_log_type_icon_size"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/tv_item_log_type_margin"
            android:text="@{logTypeEntry.content}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/act_main_title_size" />

    </LinearLayout>
</layout>


